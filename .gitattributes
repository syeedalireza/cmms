# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files (important for Docker on Windows)
*.php text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.md text eol=lf
*.sh text eol=lf
*.sql text eol=lf
*.env text eol=lf
*.conf text eol=lf
*.ini text eol=lf
Dockerfile text eol=lf
docker-compose.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
docs/ export-ignore
*.md export-ignore
